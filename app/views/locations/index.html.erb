<% if current_user %> 
  <h1 class = "text-center"> My Vacation Spots</h1> 
  <h3 class = "text-center">  An Auto-cartographical History </h3> 
  <div class = "text-center center container"> 
    <table class = "table text-center">
      <tr>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Distance</th>
      </tr>
      <% for location in @locations %>
        <tr>
          <td><%= location.address %></td>
          <td><%= location.latitude %></td>
          <td><%= location.longitude %></td>
          <td><%= location.distance %></td>
          <td><%= link_to "Show", location , class: "btn" %></td>
          <td><%= link_to "Edit", edit_location_path(location) , class: "btn" %></td>
          <td><%= link_to "Destroy", location, :confirm => 'Are you sure?', :method => :delete , class: "btn delete_row", remote: true %></td>
        </tr>
      <% end %>
    </table>

    <p><%= link_to "New Location", new_location_path, class: "btn btn-success"  %></p>

    <%= form_tag locations_path, :method => :get do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search Near", :name => nil, class: "btn"  %>
      </p>
    <% end %>
  </div>
<% end %> 